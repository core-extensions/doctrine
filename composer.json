{
    "name": "core-extensions/doctrine-extensions",
    "description": "doctrine-extensions",
    "type": "library",
    "license": "private",
    "require": {
        "php": "^7.3",
        "doctrine/doctrine-bundle": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.5",
        "friendsofphp/php-cs-fixer": "^2.16",
        "vimeo/psalm": "^3.8",
        "psalm/plugin-phpunit": "^0.8.1"
    },
    "autoload": {
        "psr-4": {
            "CoreExtensions\\DoctrineExtensions\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CoreExtensions\\DoctrineExtensions\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "cs": "php-cs-fixer fix -v --dry-run --ansi",
        "cs-fix": "php-cs-fixer fix -v --diff --ansi",
        "unit": "phpunit --colors=always",
        "psalm": "psalm --diff --diff-methods --show-info=false",
        "test": [
            "@unit",
            "@psalm",
            "@cs"
        ]
    }
}
